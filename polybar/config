[colors]
background = #192232
background-alt = #14536c
foreground = #413f55
color8 = #14536c
primary = #fc3c7a
secondary = #ff4d86
empty_foreground = #14536c

[bar/bar]

override-redirect = false 
wm-restack = bspwm
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true
width = 100%
height = 26
radius = 0.0
line-size = 0
line-color = #f00
offset-y = 0
offset-x = 0
tray-position = right
tray-padding = 5

font-0 = Source Code Pro:style=Bold:pixelsize=10;3

modules-left = memory cpu
modules-center = bspwm
modules-right = alsa battery time network

[bar/bar_HDMI1]
monitor = HDMI1
modules-right = time
inherit = bar/bar

[bar/bar_HDMI2]
monitor = HDMI2
modules-right = time
inherit = bar/bar

[module/rofi]
type = custom/text
content = MENU
click-left = rofi -show drun -location 1 -xoffset 39 -yoffset 73
click-right = rofi -show window -location 1 -xoffset 39 -yoffset 73
enable-click = true
content-foreground = #a09f69
content-padding = 2

[module/bspwm]
type = internal/bspwm
index-sort = true
enable-click = true
format = <label-state>
foramt-prefix-padding = 2
pin-workspaces = true

label-empty-foreground = ${empty_foreground}
label-focused-foreground = ${colors.primary}
label-focused-background = ${colors.background-alt} 
label-focused = %name%
label-focused-padding = 2
label-occupied = %name%
label-occupied-padding = 2
label-occupied-foreground = ${colors.secondary}
label-empty = %name%
label-empty-padding = 2

[settings]
label-focused-underline= ${colors.foreground}
throttle-output = 5
throttle-output-for = 10
throttle-input-for = 30
screenchange-reload = true
pseudo-transparency = false

[module/ncspot]
type = custom/script
exec = playerctl -p ncspot metadata --format '{{artist}} - {{title}}'
exec-if = "pgrep ncspot"
format-foreground =  ${colors.secondary}
format-padding = 1
format-prefix = MUSIC:
format-prefix-padding = 1
format-prefix-foreground = ${colors.primary}
tail = false
interval = 3

[module/time]
type = internal/date
time = %H:%M | %d/%m/%y
format = <label>
format-prefix = TIME:
format-prefix-padding = 1
format-foreground = ${colors.primary}
format-padding = 2
label = %time%
label-foreground = ${colors.secondary}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98%

format-charging = BAT: <label-charging>
format-discharging = BAT: <label-discharging>
format-full = BAT: <label-full>
label-charging = %percentage%%
label-discharging = %percentage%%

label-charging-foreground = ${colors.secondary}
label-discharging-foreground = ${colors.secondary}
label-full-foreground = ${colors.secondary}

format-charging-foreground = ${colors.primary}
format-discharging-foreground = ${colors.primary}
format-full-foreground = ${colors.primary}

format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 2

[module/network]
type = internal/network
interface = wlan0
interval = 3.0
unknown-as-up = true
accumulate-stats = true

format-connected = WIFI: <label-connected>
label-connected = %essid%
format-connected-padding = 2
format-connected-foreground = ${colors.secondary}
label-connected-foreground = ${colors.primary}

[module/alsa]
type = internal/alsa

format-volume = VOL: <label-volume>
label-muted = muted
label-muted-padding = 2
label-volume-foreground = ${colors.secondary}
format-volume-foreground = ${colors.primary}
format-volume-padding = 2

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5
format = <label> <ramp-coreload>

label = CPU %percentage%%

format-padding = 2

; Spacing between individual per-core ramps
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

label-foreground = ${colors.primary}
ramp-coreload-foreground = ${colors.primary}
format-prefix-foreground = ${colors.primary}

[module/memory]
type = internal/memory
interval = 5
format-prefix = "RAM: "
format-padding = 2
label = %gb_used%

label-foreground = ${colors.primary}
format-prefix-foreground = ${colors.primary}
