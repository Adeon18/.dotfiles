[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

format =   <label-layout> <label-indicator>

label-layout = %icon%
format-padding = 2
format-background = ${colors.background}
format-foreground = ${colors.primary}

label-indicator = %name%

; layout-icon-[0-9]+ = layout;icon
; Assign each layout an icon that will be available as %icon% token for the
; <label-layout> tag. The part before ';' will try to match %layout% value.
layout-icon-default = some-icon
layout-icon-0 = ua;UA
layout-icon-1 = us;US

label-indicator-on-capslock = בּ
label-indicator-off-capslock = 

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
interval = 1

; Thermal zone to use
thermal-zone = 0

; Full path of temperature sysfs path
hwmon-path = /sys/devices/platform/thinkpad_hwmon/hwmon/hwmon5/temp1_input

; Base temperature for where to start the ramp (in degrees celsius)
base-temperature = 20

; Threshold temperature to display warning label (in degrees celsius)
warn-temperature = 60

units = false

; Format default
format = <ramp> <label>
format-padding = 2
format-foreground = ${colors.primary}

; Format Warn
format-warn = <ramp> <label-warn>
format-warn-padding = 2
format-warn-foreground = ${colors.primary}

label = %temperature-c%°C

label-warn = WARNING %temperature-c%°C

; Ramp Icons
ramp-0 = 
ramp-1 = 
ramp-2 = 

