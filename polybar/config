font-1 = UbuntuMono Nerd Font:style=Bold:pixelsize=14;3

modules-left = memory cpu temperature
modules-center = bspwm
modules-right = backlight xkeyboard alsa battery time network

[bar/bar_HDMI1]
monitor = HDMI1
modules-right = time
inherit = bar/bar

[bar/bar_HDMI2]
monitor = HDMI2
modules-right = time
inherit = bar/bar

[module/rofi]
type = custom/text
content = MENU
